{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Delta Table Schema",
  "allOf": [
    {
      "$ref": "https://datapackage.org/profiles/2.0/tableschema.json"
    },
    {
      "type": "object",
      "properties": {
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "aggregation": {
                "type": "string"
              },
              "expression": {
                "type": "string"
              },
              "dimensions": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  ]
}
